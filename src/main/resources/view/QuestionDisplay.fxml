<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="placeHolder" styleClass="pane-with-border" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox fx:id="displayBox">
         <children>
            <TextArea fx:id="questionDisplay" editable="false" maxHeight="-Infinity" prefHeight="30.0" prefWidth="515.0" styleClass="result-display">
               <padding>
                  <Insets top="3.0" />
               </padding>
            </TextArea>
            <TextArea fx:id="answerDisplay" editable="false" prefHeight="110.0" prefWidth="515.0" styleClass="result-display">
               <padding>
                  <Insets top="3.0" />
               </padding>
            </TextArea>
            <TextArea fx:id="outcomeDisplay" editable="false" maxHeight="-Infinity" prefHeight="20.0" prefWidth="515.0" styleClass="result-display">
               <padding>
                  <Insets top="3.0" />
               </padding>
            </TextArea>
         </children>
         <StackPane.margin>
            <Insets />
         </StackPane.margin>
      </VBox>
   </children>
</StackPane>
